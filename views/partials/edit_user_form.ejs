<div class="container">
		<div class="signUp-form">
			<div class="main-div">
				<div class="panel">
			   		<h2>Edit User</h2>
					<br>
				</div>
				<form id="update" method="POST" action="/update_user/<%= data.id %>?_method=PUT">
					<div class="row form-group">
							<div class="col-xs-6 col-md-6">
								<input class="form-control" id="firstname" name="first_name" placeholder="First Name" type="text" value="<%= data.first_name %>" required autofocus>
							</div>
							<div class="col-xs-6 col-md-6">
								<input class="form-control" id="lastname" name="last_name" placeholder="Last Name" type="text" value="<%= data.last_name %>" required>
							</div>
						</div>
					<div class="form-group">
						<input type="email" id="email" name="email" class="form-control" placeholder="Email Address" value="<%= data.email %>" required>
					</div>
					<div class="form-group row">
						<span id="position"><strong>Position:	</strong></span>
						<div class="col-6 col-md-4">
							<label class="radio-inline">
								<input type="radio" name="role_id" value="1" checked/>Account Executive</label>
						</div>	
						<div class="col-6 col-md-4">
						<label class="radio-inline">
							<input type="radio" name="role_id" value="2" />Sales Manager</label>
						</div>	
						<label class="radio-inline">
					</div>
					<div class="row form-group">
						<div class="col-xs-6 col-md-9"></div>
						<div class="col-xs-3 col-md-3">
							<button type="submit" class="btn btn-outline-warning btn-sm">Update</button>
						</div>
					</div>
                </form>	
                <form id="delete" method="POST" action="/delete_user/<%= data.id %>?_method=DELETE">
                    <button class="delete" type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
			</div>
		</div>
	</div>
