<!-- Button trigger modal -->
<button type="button" class="btn btn-primary dealbtn btn-block" data-toggle="modal" data-target="#ModalCenter<%= data.name %>">
	<div class="deal-info">
		<h6><%= data.name %></h6>
		<p><%= data.company %></p>
		<p>$<%= data.amount %></p>
	</div>
</button>

<!-- Modal -->
<div class="modal fade" id="ModalCenter<%= data.name %>" tabindex="-1" role="dialog" aria-labelledby="ModalTitle<%= data.name %>" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="ModalTitle<%= data.name %>"><%= data.name %></h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-4">
						<h6>Company: </h6>
					</div>
					<div class="col-8">
						<p><%= data.company %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-4">
						<h6>Amount: </h6>
					</div>
					<div class="col-8">
						<p>$<%= data.amount %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-4">
						<h6>Contact Name: </h6>
					</div>
					<div class="col-8">
						<p><%= data.contact_first_name %> <%= data.contact_last_name %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-4">
						<h6>Rep: </h6>
					</div>
					<div class="col-8">
						<p><%= data.rep_first_name %> <%= data.rep_last_name %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-4">
						<h6>Stage: </h6>
					</div>
					<div class="col-8">
						<p><%= data.stage %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-4">
						<h6>Date Created: </h6>
					</div>
					<div class="col-8">
						<p><%= data.tim %></p>
					</div>
				</div>

			</div>
			<div class="modal-footer">
				<% if(session.role_id == 2) { %>
					<td>
						<form method="POST" action="/initnotes/<%=data.account_id %>">
							<button class="btn btn-warning">Notes</button>
						</form>
					</td>
				<% } %>
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

			</div>
		</div>
	</div>
</div>