<div class="container">
    <div class="signUp-form">
        <div class="main-div">
            <div class="panel">
                <h2>Edit Account</h2>
                <p>All fields are required</p>
            </div>
            

            <form id="update" method="POST" action="/update_account/<%= data.id %>?_method=PUT">
                <div class="row form-group">
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">First Name:</label>
                        <input class="form-control" id="firstname" name="first_name" placeholder="First Name" type="text" value="<%= data.first_name %>" required autofocus/>
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">Last Name:</label>
                        <input class="form-control" id="lastname" name="last_name" placeholder="Last Name" type="text"  value="<%= data.last_name %>" required/>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">Email:</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Email Address" value="<%= data.email %>">
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">Company:</label>
                        <input type="text" id="company" name="company" class="form-control" placeholder="Company"  value="<%= data.company %>">
                    </div>
                </div>
                <div class="form-group">
                        <label class="label_editpage">Address:</label>
                        <input type="text" id="address" name="address" class="form-control" placeholder="Address" value="<%= data.address %>">
                </div>
                <div class="row form-group">
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">City:</label>
                        <input type="text" id="city" name="city" class="form-control" placeholder="City" value="<%= data.city %>">
                    </div>
                    <div class="col col-lg-2">
                        <label class="label_editpage">State:</label>
                        <input type="text" id="state" name="state" class="form-control" placeholder="State" value="<%= data.state %>">
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <label class="label_editpage">ZIP:</label>
                        <input type="text" id="zip" name="zip" class="form-control" placeholder="ZIP"  value="<%= data.zip %>">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">Phone:</label>
                        <input type="tel" id="phone" name="phone" class="form-control" placeholder="Phone" value="<%= data.phone %>">
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">Cell:</label>
                        <input type="tel" id="cell" name="cell" class="form-control" placeholder="Cell" value="<%= data.cell %>">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">Annual Revenue:</label>
                        <input type="text" id="annual_revenue" name="annual_revenue" class="form-control" placeholder="Annual Revenue" value="<%= data.annual_revenue %>">
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <label class="label_editpage">User ID:</label>
                        <input type="text" id="user_id" name="user_id" class="form-control" placeholder="User ID" value="<%= data.user_id %>">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-xs-3 col-md-3">
                        <button type="submit" class="btn btn-warning btn-sm">Update</button>
                    </div>
                </form>
                    <div class="col-xs-3 col-md-6">
                        <form id="delete" method="POST" action="/delete_account/<%= data.id %>?_method=DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                     <div class="col-xs-3 col-md-3">
                        <form method="GET" action="/accounts">
                            <button type="submit" class="btn btn-secondary btn-sm">Cancel</button>
                        </form>
                    </div>
                </div> 
        </div>
    </div>
</div>