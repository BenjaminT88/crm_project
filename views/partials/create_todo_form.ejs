<div class="container">
		<div class="signUp-form">
			<div class="main-div">
				<div class="panel">
			   		<h2>Create To-Do</h2>
			   		<p>All fields are required</p>
				</div>
				
				<form method="POST" action="/create_todo/<%= data.account_stage_id %>">
					<div class="form-group">
							<label class="label_editpage">Deal Name:</label>
							<input type="text" name="name" class="form-control" placeholder="Deal Name" value="<%= data.name %>" required disabled>
					</div>                
					<div class="row form-group">
						<div class="col-xs-6 col-md-6">
							<label class="label_editpage">Amount:</label>
							<input type="text" id="amount" name="amount" class="form-control" placeholder="Deal Amount"  value="<%= data.amount %>" required disabled>
						</div>
						<div class="col-xs-6 col-md-6">
							<label class="label_editpage">Company:</label>
							<input type="text" id="company" name="company" class="form-control" placeholder="Company"  value="<%= data.company %>" required disabled>
						</div>
					</div>						
					<div class="form-group">
						<label class="label_editpage">To-Do:</label>
						<input type="text" name="todo" class="form-control" placeholder="To-Do" required>
					</div>				
					<div class="form-group">
						<label class="label_editpage">Due Date:</label>
						<input type="text" name="due" class="form-control" placeholder="Due Date" required>
						<small class="form-text text-muted label_editpage">Format: "YYYY-MM-DD HH:MM:SS"</small>
					</div>	
					<br>
					<div class="row form-group">
						<div class="col-xs-3 col-md-9">
						</div>
						<div class="col-xs-3 col-md-3">
							<button type="submit" class="btn btn-success btn-sm">Create</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>