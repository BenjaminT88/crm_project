<div class="container">
	<div class="signUp-form">
		<div class="main-div">
			<div class="panel">
				   <h2>Create New Deal</h2>
				   <p>All fields are required</p>
			</div>
			
			<form id="newaccount" method="POST" action="/create_deal">
				<div class="form-group">
					<label class="label_editpage" for="createdealstage">Select Stage</label>
					<select class="form-control" name="stage_id" id = "createdealstage" required>
							<% data.forEach(function(account) { %>
									<option value="<%= account.id %>"><%= account.stage %></option>
							<% }); %>
					</select>
				</div>
				<div class="form-group">
					<label class="label_editpage" for="createdealstage">Select Company</label>
					<select class="form-control" id = "createdealstage" name="account_id" required>
							<option value="<%= dat.id %>"><%= dat.company %></option>
					</select>
				</div>						
				<div class="form-group">
					<input type="text" name="amount" class="form-control" placeholder="Deal Amount">
				</div>
				<div class="form-group">
					<input type="text" name="name" class="form-control" placeholder="Describe">
				</div>					

				<button type="submit" class="btn btn-success">Create New Deal</button>
			</form>

		</div>
	</div>
</div>