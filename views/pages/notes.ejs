<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style %>
</head>

<body>

	<header>
		<% include ../partials/header %>
	</header>
</div>
<div class="main-content table-responsive table-sm">
		<table class="table table-striped table-dark table-hover">
			<thead>
				<tr>
					<th scope="col">
						<form method="GET" action="/createaccount">
							<button class="btn btn-outline-success btn-sm">
								<i class="fas fa-plus"></i> 
								Create New Note</button>
						</form>
					</th>
				</tr>
			</thead>
			<thead>
				<tr>
					<th scope="col">Company</th>
					<th scope="col">Contact Name</th>
					<th scope="col">Amount</th>
					<th scope="col">Note</th>
				</tr>
			</thead>
			<tbody>
				<% dat.forEach(function(data) { %>
					<tr>
						<th scope="row"><%= data.company %></th>
						<td><%= data.first_name %> <%= data.last_name %></td>
						<td><%= data.amount %></td>
						<td><%= data.note %></td>
							<td>
								<form method="POST" action="/initnotes/<%=data.account_id %>">
									<button class="btn btn-outline-warning btn-sm">Edit</button>
								</form>
							</td>
					</tr>
				<% }); %>
			</tbody>

			</tbody>
		</table>
	</div>
	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>