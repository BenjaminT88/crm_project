<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style %>
	
	<style>
		#nav_initnotes{
			color: white;
		}
	</style>
</head>

<body>

	<header>
		<% include ../partials/header %>
	</header>
	<div class="chooseCompany">
		<div id="backarrow_notes">
			<a href="/initnotes"><i class="far fa-arrow-alt-circle-left fa-2x" style="color:rgb(102, 102, 102)"></i></a>
		</div>
		<label id="seleCompTitle">Choose Another Company</label>
	</div>

<div class="main-content note_page_padding table-responsive table-sm">
		<table class="table table-striped table-dark table-hover">
			<thead>
				<tr>
					<th scope="col">
						<form method="GET" action="/create_note/<%= datTemp.account_id %>">
							<button class="btn btn-outline-success btn-sm">
								<i class="fas fa-plus"></i> 
								Create New Note</button>
						</form>
					</th>
				</tr>
			</thead>
			<thead>
				<tr>
					<th scope="col">Deal</th>
					<th scope="col">Company</th>
					<th scope="col">Amount</th>
					<th scope="col">Note</th>
				</tr>
			</thead>
			<tbody>
				<% dat.forEach(function(data) { %>
					<tr>
						<th scope="row"><%= data.name %></th>
						<td><%= data.company %></td>
						<td><%= data.amount %></td>
						<td><%= data.note %></td>
						<td>
							<form method="GET" action="/edit_note/<%=data.account_id %>/<%=data.note_id %>">
								<button class="btn btn-outline-warning btn-sm">Edit</button>
							</form>
						</td>
					</tr>
				<% }); %>
			</tbody>

			</tbody>
		</table>
	</div>
<!-- Footer -->
<% include ../partials/footer %>
<!-- Footer -->
	
</body>
</html>