<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style_login %>


</head>

<body id="reset_password">
	
	<div class="container">
		<div class="login-form">
			<div class="main-div">
				<div class="panel">
					   <h2>Reset Password</h2>
					   <br>
				</div>
				<form method="POST" action="/reset_password">
					<div class="form-group">
						<input type="password" class="form-control" id="resetInputPassword" placeholder="Enter New Password" required>
					</div>
					<div class="form-group">
						<input type="password" name="password" class="form-control" id="resetInputPasswordAgain" placeholder="Re-enter New Password" required>
						<div id="message"></div>
					</div>
					
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>

			</div>
		</div>
	</div>

	<script>
		$('#resetInputPassword, #resetInputPasswordAgain').on('keyup', function () {
			if ($('#resetInputPassword').val() != "" && $('#resetInputPasswordAgain').val() != "" && $('#resetInputPassword').val() == $('#resetInputPasswordAgain').val()) {
				$('#message').html('Matching').css('color', 'green');
				$(".btn").removeAttr("disabled");
			} else {
				$('#message').html('Not Matching').css('color', 'red');
				$(".btn").attr("disabled", "true");
			}
		});
	</script>	
</body>
</html>