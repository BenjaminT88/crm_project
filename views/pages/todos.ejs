<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style %>

	<style>
		.deal-container{
			margin-left: 20px;
			margin-right: 20px;
		}
		h4{
			background-color: darkgrey;
			text-align: center;
		}
		#nav_todo{
			color: white;
		}
	</style>
</head>

<body>
	<header>
		<% include ../partials/header %>
	</header>

	<div class="main-content table-responsive table-sm">
			<table class="table table-striped table-dark table-hover ">
				<thead>
					<tr>
						<th scope="col">To-Do</th>
						<th scope="col">Deal</th>
						<th scope="col">Amount</th>
						<th scope="col">Company</th>
						<th scope="col">Contact Person</th>
						<th scope="col">Email</th>
						<th scope="col">Due Date</th>
					</tr>
					
				</thead>
				<tbody>
					<% data.forEach(function(data) { %>
						<tr>
							<th scope="row"><%= data.todo %></th>
							<td><%= data.name %></td>
							<td><%= data.amount %></td>
							<td><%= data.company %></td>
							<td><%= data.first_name %> <%= data.last_name %></td>
							<td><a href="mailto:<%= data.email %>"  target="_top"><%= data.email %></a></td>
							<td><%= data.due %></td>
							<td>
								<form method="GET" action="/edit_todo/<%=data.id %>">
									<button class="btn btn-outline-warning btn-sm">Edit</button>
								</form>
							</td>
						</tr>
					<% }); %>
				</tbody>
			</table>
		</div>
	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>