<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style %>

	<style>
		.deal-container{
			margin-left: 20px;
			margin-right: 20px;
		}
		h4{
			background-color: darkgrey;
			text-align: center;
		}

	</style>
</head>

<body>
	<header>
		<% include ../partials/header %>
	</header>

	<div class="main-content table-responsive table-sm">
			<table class="table table-striped table-dark table-hover ">
				<thead>
					<tr>
						<th scope="col">
							<form method="GET" action="/create_deal_blank">
								<button class="btn btn-outline-success btn-sm">
									<i class="fas fa-plus"></i> 
									Create New Deal</button>
							</form>
						</th>
					</tr>
				</thead>
				<thead>
					<tr>
						<th scope="col">Deal</th>
						<th scope="col">Company</th>
						<th scope="col">Amount</th>
						<th scope="col">Rep</th>
						<th scope="col">Stage</th>
						<th scope="col">Contact Name</th>
						<th scope="col">Date Created</th>
					</tr>
					
				</thead>
				<tbody>
					<% data.forEach(function(data) { %>
						<tr>
							<th scope="row"><%= data.name %></th>
							<td><%= data.company %></td>
							<td><%= data.amount %></td>
							<td><%= data.rep_first_name %> <%= data.rep_last_name %></td>
							<td><%= data.stage %></td>
							<td><%= data.contact_first_name %> <%= data.contact_last_name %></td>
							<td><%= data.tim %></td>
							<td>
								<div class="btn-group navbar">
									<button type="button" class="btn btn-outline-warning btn-sm " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<i class="fa fa-ellipsis-h" aria-hidden="true"></i> 
									</button>
									<div class="dropdown-menu dropdown-menu-right">
										<a class="dropdown-item" href="initnotes/<%=data.account_id %>">Notes</a>
										<a class="dropdown-item" href="create_todo/<%=data.id %>">New To-Do</a>
										<a class="dropdown-item" href="edit_deal/<%=data.account_id %>">Edit</a>
									</div>
								</div>
							</td>
						</tr>
					<% }); %>
				</tbody>
			</table>
		</div>
	<div class="deal-container">
		<div class="row">
			
				<div class="col-sm">
					<h4>Lead</h4>
					<% data.forEach(function(data) { %>
						<% if(data.stage == "Lead") { %>
							<h6><%= data.name %></h6>
							<p><%= data.company %></p>
							<p>$ <%= data.amount %></p>
						<% } %>
					<% }); %>
				</div>
				<div class="col-sm">
					<h4>Opportunity</h4>
					<% data.forEach(function(data) { %>
						<% if(data.stage == "Opportunity") { %>
							<h6><%= data.name %></h6>
							<p><%= data.company %></p>
							<p>$ <%= data.amount %></p>
						<% } %>
					<% }); %>					
				</div>
				<div class="col-sm">
					<h4>Proposal Out</h4>
					<% data.forEach(function(data) { %>
						<% if(data.stage == "Proposal Out") { %>
							<h6><%= data.name %></h6>
							<p><%= data.company %></p>
							<p>$ <%= data.amount %></p>
						<% } %>
					<% }); %>	
				</div>
				<div class="col-sm">
					<h4>Signature In</h4>
					<% data.forEach(function(data) { %>
						<% if(data.stage == "Signature In") { %>
							<h6><%= data.name %></h6>
							<p><%= data.company %></p>
							<p>$ <%= data.amount %></p>
						<% } %>
					<% }); %>	
				</div>
				<div class="col-sm">
					<h4>Docs Out</h4>
					<% data.forEach(function(data) { %>
						<% if(data.stage == "Docs Out") { %>
							<h6><%= data.name %></h6>
							<p><%= data.company %></p>
							<p>$ <%= data.amount %></p>
						<% } %>
					<% }); %>						
				</div>
				<div class="col-sm">
					<h4>Docs In</h4>
					<% data.forEach(function(data) { %>
						<% if(data.stage == "Docs In") { %>
							<h6><%= data.name %></h6>
							<p><%= data.company %></p>
							<p>$ <%= data.amount %></p>
						<% } %>
					<% }); %>	
				</div>
				<div class="col-sm">
					<h4>Funded</h4>
					<% data.forEach(function(data) { %>
						<% if(data.stage == "Funded") { %>
							<h6><%= data.name %></h6>
							<p><%= data.company %></p>
							<p>$ <%= data.amount %></p>
						<% } %>
					<% }); %>	
				</div>
			
		</div>
	</div>


	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>