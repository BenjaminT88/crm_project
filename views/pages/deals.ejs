<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<style>
		.main-content{
			padding-top: 110px;
		}
	</style>
</head>

<body>
	<header>
		<% include ../partials/header %>
	</header>

	<div class="main-content table-responsive table-sm">
			<table class="table table-striped table-dark table-hover ">
				<thead>
					<tr>
						<th scope="col">
							<form method="GET" action="">
								<button class="btn btn-outline-success btn-sm">
									<i class="fas fa-plus"></i> 
									Create New Deal....?</button>
							</form>
						</th>
					</tr>
				</thead>
				<thead>
					<tr>
						<th scope="col">Deal</th>
						<th scope="col">Company</th>
						<th scope="col">Amount</th>
						<th scope="col">Rep</th>
						<th scope="col">Stage</th>
						<th scope="col">Contact Name</th>
						<th scope="col">Date Created</th>
					</tr>
					
				</thead>
				<tbody>
					<% data.forEach(function(data) { %>
						<tr>
							<th scope="row"><%= data.name %></th>
							<td><%= data.company %></td>
							<td><%= data.amount %></td>
							<td><%= data.rep_first_name %> <%= data.rep_last_name %></td>
							<td><%= data.stage %></td>
							<td><%= data.contact_first_name %> <%= data.contact_last_name %></td>
							<td><%= data.tim %></td>
							<% if(session.role_id == 2) { %>
								<td>
									<form method="POST" action="/initnotes/<%=data.account_id %>">
										<button class="btn btn-outline-warning btn-sm">Notes</button>
									</form>
								</td>
							<% } %>
						</tr>
					<% }); %>
				</tbody>
			</table>
		</div>

	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>