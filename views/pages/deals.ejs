<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style %>

</head>

<body>
	<header>
		<% include ../partials/header %>
	</header>

	<div class="main-content table-responsive table-sm">
			<table class="table table-striped table-dark table-hover ">
				<thead>
					<tr>
						<th scope="col">
							<form method="GET" action="/create_deal_blank">
								<button class="btn btn-outline-success btn-sm">
									<i class="fas fa-plus"></i> 
									Create New Deal</button>
							</form>
						</th>
					</tr>
				</thead>
				<thead>
					<tr>
						<th scope="col">Deal</th>
						<th scope="col">Company</th>
						<th scope="col">Amount</th>
						<th scope="col">Rep</th>
						<th scope="col">Stage</th>
						<th scope="col">Contact Name</th>
						<th scope="col">Date Created</th>
					</tr>
					
				</thead>
				<tbody>
					<% data.forEach(function(data) { %>
						<tr>
							<th scope="row"><%= data.name %></th>
							<td><%= data.company %></td>
							<td><%= data.amount %></td>
							<td><%= data.rep_first_name %> <%= data.rep_last_name %></td>
							<td><%= data.stage %></td>
							<td><%= data.contact_first_name %> <%= data.contact_last_name %></td>
							<td><%= data.tim %></td>
							<td>
								<form method="POST" action="/initnotes/<%=data.account_id %>">
									<button class="btn btn-outline-warning btn-sm">Notes</button>
								</form>
							</td>
						</tr>
					<% }); %>
				</tbody>
			</table>
		</div>

		==========================================================================================


	<div class="deal-container">
		<div class="row">
				<div class="col-sm btnLead">
					<h4 class="stage-title">Lead</h4>
						<% data.forEach(function(data) { %>
							<% if(data.stage == "Lead") { %>
								<% include ../partials/deal_display_buttons %>
							<% } %>
						<% }); %>
				</div>
				<i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
				<div class="col-sm btnOpportunity">
					<h4 class="stage-title">Opportunity</h4>
						<% data.forEach(function(data) { %>
							<% if(data.stage == "Opportunity") { %>
								<% include ../partials/deal_display_buttons %>
							<% } %>
						<% }); %>
				</div>
				<i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
				<div class="col-sm btnProposalOut">
					<h4 class="stage-title">Proposal Out</h4>
						<% data.forEach(function(data) { %>
							<% if(data.stage == "Proposal Out") { %>
								<% include ../partials/deal_display_buttons %>
							<% } %>
						<% }); %>
				</div>
				<i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
				<div class="col-sm btnSignatureIn">
					<h4 class="stage-title">Signature In</h4>
						<% data.forEach(function(data) { %>
							<% if(data.stage == "Signature In") { %>
								<% include ../partials/deal_display_buttons %>
							<% } %>
						<% }); %>
				</div>
				<i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
				<div class="col-sm btnDocsOut">
					<h4 class="stage-title">Docs Out</h4>
						<% data.forEach(function(data) { %>
							<% if(data.stage == "Docs Out") { %>
								<% include ../partials/deal_display_buttons %>
							<% } %>
						<% }); %>
				</div>
				<i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
				<div class="col-sm btnDocsIn">
					<h4 class="stage-title">Docs In</h4>
						<% data.forEach(function(data) { %>
							<% if(data.stage == "Docs In") { %>
								<% include ../partials/deal_display_buttons %>
							<% } %>
						<% }); %>
				</div>
				<i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i>
				<div class="col-sm btnFunded">
					<h4 class="stage-title">Funded</h4>
						<% data.forEach(function(data) { %>
							<% if(data.stage == "Funded") { %>
								<% include ../partials/deal_display_buttons %>
							<% } %>
						<% }); %>
				</div>
	</div>
