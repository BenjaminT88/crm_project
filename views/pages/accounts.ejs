<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<style>
		.main-content{
			padding-top: 110px;
		}
		#fix-thead{
			padding-top: 200px;
			/* position: fixed; */
			top: 150px;
		}
	</style>
</head>

<body>
	<header>
		<% include ../partials/header %>
	</header>
	
</div>
	<div class="main-content table-responsive table-sm">
			<table class="table table-striped table-dark table-hover">
				<thead>
					<tr>
						<th scope="col">
							<form method="GET" action="/createaccount">
								<button class="btn btn-outline-success btn-sm">
									<i class="fas fa-plus"></i> 
									Create New Account</button>
							</form>
						</th>
					</tr>
				</thead>
				<thead>
					<tr>
						<th scope="col">Company</th>
						<th scope="col">Name</th>
						<th scope="col">Email</th>
						<th scope="col">Address</th>
						<th scope="col">Cell</th>
						<th scope="col">Annual Revenue</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i=0; i<data.length; i++) { %>
						<tr>
							<th scope="row"><%= data[i].company%></th>
							<td><%= data[i].first_name %> <%= data[i].last_name %></td>
							<td><a href="mailto:<%= data[i].email %>"  target="_top">Email</a></td>
							<td><%= data[i].address%>, <%= data[i].city%>, <%= data[i].state%> <%= data[i].zip%></td>
							<td><%= data[i].cell%></td>
							<td><%= data[i].annual_revenue%></td>
							<td>
								<form method="GET" action="create_deal/<%=data[i].id %>">
									<button class="btn btn-outline-warning btn-sm">New Deal</button>
								</form>
							</td>
							<% if(session.role_id == 2) { %>
								<td>
									<form method="GET" action="edit_account/<%=data[i].id %>">
										<button class="btn btn-outline-warning btn-sm">EDIT</button>
									</form>
								</td>
							<% } %>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	<footer>
		<% include ../partials/footer %>
	</footer>			
</body>
</html>