<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style %>

</head>

<body>
	<header>
		<% include ../partials/header %>
	</header>
	
</div>
	<div class="main-content table-responsive table-sm">
			<table class="table table-striped table-dark table-hover">
				<% if(session.role_id == 2) { %>
					<thead>
						<tr>
							<th scope="col">
								<form method="GET" action="/createaccount">
									<button class="btn btn-outline-success btn-sm">
										<i class="fas fa-plus"></i> 
										Create New Account</button>
								</form>
							</th>
						</tr>
					</thead>
				<% } %>
				<thead>
					<tr>
						<th scope="col">Company</th>
						<th scope="col">Name</th>
						<th scope="col">Email</th>
						<th scope="col">Address</th>
						<th scope="col">Cell</th>
						<th scope="col">Annual Revenue</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i=0; i<data.length; i++) { %>
						<tr>
							<th scope="row"><%= data[i].company%></th>
							<td><%= data[i].first_name %> <%= data[i].last_name %></td>
							<td><a href="mailto:<%= data[i].email %>"  target="_top"><%= data[i].email %></a></td>
							<td><%= data[i].address%>, <%= data[i].city%>, <%= data[i].state%> <%= data[i].zip%></td>
							<td><%= data[i].cell%></td>
							<td><%= data[i].annual_revenue%></td>

							<% if(session.role_id == 2) { %>
								<td>
									<div class="btn-group navbar">
										<button type="button" class="btn btn-outline-warning btn-sm " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<i class="fa fa-ellipsis-h" aria-hidden="true"></i> 
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="create_deal/<%=data[i].id %>">New Deal</a>
										
											<a class="dropdown-item" href="edit_account/<%=data[i].id %>">Edit</a>
										</div>
									</div>
								</td>
							<% } %>

							<% if(session.role_id == 1) { %>
								<td>
									<form method="GET" action="create_deal/<%=data[i].id %>">
										<button class="btn btn-outline-warning btn-sm">New Deal</button>
									</form>
								</td>
							<% } %>

						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	<footer>
		<% include ../partials/footer %>
	</footer>			
</body>
</html>